    def load_data(self, file_name):
        # Create an empty dictionary named scores
        scores = {}
        with open(file_name, "r") as fname:
            for line in fname:
                #strip() removes extra whitespaces before and after text, split() will split based on delimiter
                name, score = line.strip().split(",")
                #Add a new key value pair to the dictionary
                scores[name] = int(score)
                #write name and score to list box
                self.lstStudentScores.addItem(str(name)+"     "+str(score))
        return scores
        
    def calculate_average(self):
        total = 0
        length = len(self.student_scores_dictionary)
        for key,value in self.student_scores_dictionary.items():
            total = total + value
            
        average = total/length
        self.txtAverage.setText(str(average))

